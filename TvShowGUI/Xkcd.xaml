<Window x:Class="TvShowGUI.Xkcd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TvShowGUI"
        mc:Ignorable="d"
        Title="XKCD za kraj" Height="800" Width="1100" FontSize="35" FontWeight="SemiBold">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="Box1" Grid.Row="2" Text="" Width="400" Margin="0,20,0,5" IsEnabled="False" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Image x:Name="ShowComic"  Grid.Row="2" Grid.RowSpan="3" Stretch="None" Margin="100,80,100,40" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
    </Grid>
</Window>
